{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@/*": ["src/*"],
      "@/constants/*": ["constants/*"],
      "firebase/functions": ["node_modules/firebase/functions"],
      "firebase/firestore": ["node_modules/firebase/firestore"],
      "firebase/auth": ["node_modules/firebase/auth"],
      "firebase/storage": ["node_modules/firebase/storage"],
      "firebase/app": ["node_modules/firebase/app"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": [
    "firebase/**",
    "firebase-backend/**",
    "colyseus-server/**",
    "node_modules"
  ]
}
