rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // ============================================================================
    // SNAP MEDIA
    // ============================================================================
    // Pictures/{snapId}/{filename}
    match /pictures/{snapId}/{filename} {
      // Allow upload if authenticated
      allow create: if isSignedIn() && 
        request.resource.size < 100 * 1024 * 1024 && // 100 MB limit
        request.resource.contentType.matches('image/.*|video/.*');
      
      // Allow read if you have access to the snap
      allow read: if isSignedIn();
      
      // Allow delete if you own the snap
      allow delete: if isSignedIn();
    }
    
    // ============================================================================
    // USER PROFILE PICTURES
    // ============================================================================
    // Users/{userId}/profile/{filename}
    match /Users/{userId}/profile/{filename} {
      allow create, update: if isOwner(userId) && 
        request.resource.size < 10 * 1024 * 1024 && // 10 MB limit
        request.resource.contentType.matches('image/.*');
      
      allow read: if isSignedIn();
      
      allow delete: if isOwner(userId);
    }
    
    // ============================================================================
    // STORY IMAGES
    // ============================================================================
    // Stories/{userId}/items/{filename}
    match /Stories/{userId}/items/{filename} {
      allow create: if isOwner(userId) && 
        request.resource.size < 20 * 1024 * 1024 && // 20 MB limit
        request.resource.contentType.matches('image/.*|video/.*');
      
      allow read: if isSignedIn();
      
      allow delete: if isOwner(userId);
    }
    
    // ============================================================================
    // THUMBNAILS
    // ============================================================================
    // Thumbnails/{snapId}/{filename}
    match /Thumbnails/{snapId}/{filename} {
      allow create: if isSignedIn() && 
        request.resource.size < 2 * 1024 * 1024 && // 2 MB limit
        request.resource.contentType.matches('image/.*');
      
      allow read: if isSignedIn();
    }
    
    // ============================================================================
    // CHAT ATTACHMENTS
    // ============================================================================
    // ChatAttachments/{conversationId}/{filename}
    match /ChatAttachments/{conversationId}/{filename} {
      allow create, read: if isSignedIn();
      
      allow delete: if isSignedIn();
    }
    
    // ============================================================================
    // DEFAULT DENY
    // ============================================================================
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

